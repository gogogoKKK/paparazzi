<!DOCTYPE module SYSTEM "module.dtd">

<module name="ctrl_module_outerloop_demo" dir="ctrl">
  <doc>
    <description>
        Demo Control Module.
        Only for rotorcraft firmware.
        Simple rate controler as example on how to integrate write and call your own controller in a module.
    </description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="CtrlModDemo">
        <dl_setting var="use_jevois_ctrl" min="0" step="1" max="1" module="ctrl/ctrl_module_outerloop_demo" shortname="use_jevois_ctrl"/>
        <dl_setting var="jevois_start_status" min="0" step="1" max="1" module="ctrl/ctrl_module_outerloop_demo"
                    shortname="jevois_status" handler="jevois_status" values="FALSE|TRUE"/>
      </dl_settings>
    </dl_settings>
  </settings>

  <header>
    <file name="ctrl_module_outerloop_demo.h"/>
  </header>
  <init fun="ctrl_module_outerloop_demo_init()"/>
  <makefile>
    <file name="ctrl_module_outerloop_demo.c"/>
  </makefile>

</module>

