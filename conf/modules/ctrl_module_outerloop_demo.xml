<!DOCTYPE module SYSTEM "module.dtd">

<module name="ctrl_module_outerloop_demo" dir="ctrl">
  <doc>
    <description>
        Demo Control Module.
        Only for rotorcraft firmware.
        Simple rate controler as example on how to integrate write and call your own controller in a module.
    </description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="CtrlModDemo">
        <dl_setting var="ctrl_outerloop_kp" min="0" step="1" max="100" module="ctrl/ctrl_module_outerloop_demo" shortname="kp"/>
        <dl_setting var="ctrl_outerloop_kv" min="0" step="1" max="50" module="ctrl/ctrl_module_outerloop_demo" shortname="kv"/>
        <dl_setting var="ctrl_outerloop_kh" min="1000" step="100" max="20000" module="ctrl/ctrl_module_outerloop_demo" shortname="kh"/>
        <dl_setting var="ctrl_outerloop_kvz" min="1000" step="100" max="20000" module="ctrl/ctrl_module_outerloop_demo" shortname="kvz"/>
      </dl_settings>
    </dl_settings>
  </settings>

  <header>
    <file name="ctrl_module_outerloop_demo.h"/>
  </header>

  <makefile>
    <file name="ctrl_module_outerloop_demo.c"/>
  </makefile>

</module>

